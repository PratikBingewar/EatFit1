<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.changeWeight.ChangeWeightActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dots_height">

        <TextView
            android:id="@+id/change_weight_view"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:layout_gravity="center"
            android:text="Change your weight"
            android:textColor="@color/dot_dark_screen1"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/new_weight_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp">

            <Button
                android:id="@+id/btn_substract_new_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_alignParentLeft="true"
                android:background="@color/dot_dark_screen3"/>


            <Button
                android:id="@+id/btn_add_new_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="40dp"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@color/dot_dark_screen3"
                />


        </RelativeLayout>


        <!-- Intensity Level -->

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_change_weight_next_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/shape_login"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>