<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout">

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebca0707"
            android:elevation="4dp"
            android:paddingBottom="24dp">



            <TextView
                android:id="@+id/name_on_basic_profile_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp"
                android:text="John Doe"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/email_on_basic_profile_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_on_basic_profile_top"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="abc@gmail.com"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/profile_layout"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"

            >

            <TextView
                android:id="@+id/age_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="Age:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/name_on_basic_profile_editable" />

            <TextView
                android:id="@+id/gender_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="Gender: "
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/age_on_basic_profile_editable" />

            <TextView
                android:id="@+id/BMR_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="BMR:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/BMI_on_basic_profile_editable" />

            <TextView
                android:id="@+id/BMI_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="4dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="BMI:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/password_on_basic_profile_editabletextView11" />

            <TextView
                android:id="@+id/password_on_basic_profile_editabletextView11"
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"

                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="Password"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/username_on_basic_profile_editable" />

            <TextView
                android:id="@+id/name_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="Name:"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/name_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="108dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="John Doe"
                app:layout_constraintLeft_toRightOf="@+id/name_on_basic_profile_editable"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/BMR_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="1500"
                app:layout_constraintLeft_toRightOf="@+id/BMR_on_basic_profile_editable"
                app:layout_constraintTop_toBottomOf="@+id/BMI_on_basic_profile_to_edit" />


            <TextView
                android:id="@+id/BMI_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="20"
                app:layout_constraintStart_toEndOf="@+id/BMI_on_basic_profile_editable"
                app:layout_constraintTop_toBottomOf="@+id/password_on_basic_profile_editabletextView11" />


            <TextView
                android:id="@+id/gender_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="male"
                app:layout_constraintLeft_toRightOf="@+id/gender_on_basic_profile_editable"
                app:layout_constraintTop_toBottomOf="@+id/age_on_basic_profile_editable" />

            <TextView
                android:id="@+id/email_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="abc@gmail.com"
                app:layout_constraintLeft_toRightOf="@+id/username_on_basic_profile_editable"
                app:layout_constraintTop_toBottomOf="@+id/gender_on_basic_profile_to_edit" />

            <TextView
                android:id="@+id/username_on_basic_profile_editable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginLeft="140dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="Username: "
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/gender_on_basic_profile_editable" />

            <TextView
                android:id="@+id/age_on_basic_profile_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:clickable="true"
                android:paddingBottom="@dimen/slide_title"
                android:text="20"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/name_on_basic_profile_editable"
                app:layout_constraintLeft_toRightOf="@+id/age_on_basic_profile_editable"
                android:layout_marginLeft="8dp" />

            <Button
                android:id="@+id/edit_name_button"
                android:layout_width="85dp"
                android:layout_height="47dp"
                android:layout_marginStart="172dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="@android:color/transparent"
                android:text="edit"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintStart_toEndOf="@+id/name_on_basic_profile_to_edit"
                app:layout_constraintTop_toTopOf="parent" />

            <Button

                android:id="@+id/edit_username_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/transparent"
                android:text="edit"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.925"
                app:layout_constraintStart_toEndOf="@+id/email_on_basic_profile_to_edit"
                app:layout_constraintTop_toBottomOf="@+id/edit_name_button" />

            <Button
                android:id="@+id/edit_password_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="@android:color/transparent"
                android:text="edit"
                android:textColor="@android:color/holo_blue_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.957"
                app:layout_constraintStart_toEndOf="@+id/password_on_basic_profile_editabletextView11"
                app:layout_constraintTop_toBottomOf="@+id/edit_username_button" />

        </android.support.constraint.ConstraintLayout>
    </RelativeLayout>
</ScrollView>