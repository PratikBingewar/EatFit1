<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.addFood.AddFoodActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SearchView
            android:id="@+id/food_search_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="click to search"
            android:layout_margin="20dp"
            android:outlineAmbientShadowColor="@color/aluminum"
            android:outlineSpotShadowColor="@color/aluminum"
            android:background="@drawable/shape_login"></SearchView>
    </LinearLayout>
</RelativeLayout>