<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eatfit">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_food_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_food_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.connetionLost.LostConnectionActivity" />
        <activity android:name=".view.basicProfile.UpdatePassword" />
        <activity android:name=".view.basicProfile.UpdateUserName" />
        <activity android:name=".view.basicProfile.UpdateName" />
        <activity android:name=".view.searchFood.SearchFoodActivity">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.forgorPassword.EnterNewPasswordActivity" />
        <activity android:name=".view.forgorPassword.ForgotPasswordActivity" />
        <activity android:name=".view.registration.setHeightAndWeight.SetHeightAndWeightActivity" />
        <activity android:name=".view.registration.setCurrentCalorieConsmption.SetCurrentCalorieConsmptionActivity" />
        <activity android:name=".view.changeDietPreference.ChangeDietPreferenceActivity" />
        <activity android:name=".view.changeRegionPreference.ChangeRegionPreferenceActivity" />
        <activity android:name=".view.suggestFood.FoodSuggestionActivity" />
        <activity android:name=".view.addQuantity.AddQuantityActivity" />
        <activity android:name=".view.addFood.AddFoodActivity" />
        <activity android:name=".view.graph.GraphActivity" />
        <activity android:name=".view.basicProfile.BasicProfileActivity" />
        <activity android:name=".view.details.DetailsActivity" />
        <activity android:name=".view.changeFitnessGoal.ChangeFitnessGoalActivity" />
        <activity android:name=".view.changeWeight.ChangeWeightActivity" />
        <activity android:name=".view.reminder.SetReminderActivity" />
        <activity android:name=".view.registration.setRegionPreference.SetRegionPreferenceActivity" />
        <activity android:name=".view.registration.setDietPreference.SetDietPreferenceActivity" />
        <activity android:name=".view.registration.setWeightGoal.SetWeightGoalActivity" />
        <activity android:name=".view.registration.setFitnessGoal.SetFitnessGoalActivity" />
        <activity android:name=".view.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".view.menu.MainMenuActivity"
            android:label="@string/title_activity_main_menu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.registration.basicRegistration.RegistrationActivity" />
    </application>

</manifest>